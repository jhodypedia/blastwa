<div class="cardx">
  <form id="blast-form" enctype="multipart/form-data">
    <label>Nomor Tujuan</label>
    <textarea name="numbers" rows="3" placeholder="08123...,08124..."></textarea>
    <input type="file" name="numbersFile">

    <label>Jenis Pesan</label>
    <select name="type">
      <option value="text">Text</option>
      <option value="media">Media</option>
    </select>

    <label>Isi Pesan</label>
    <textarea name="text" rows="4"></textarea>

    <label>Media (opsional)</label>
    <input type="file" name="media">

    <button type="submit"><i class="fas fa-paper-plane"></i> Kirim</button>
    <button type="button" id="cancel-blast" class="danger"><i class="fas fa-ban"></i> Cancel</button>
  </form>

  <div class="progress-box">
    <p>Progress: <span id="progress-text">0/0</span></p>
  </div>
</div>
